{
  "compilerOptions": {
    "module": "amd",
    "target": "es2016",
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                           
    "skipLibCheck": true  
  },
  "include": [
    "./assets/*",
    "./assets/**/*"
  ]
}

